<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body>
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('partials/sidebar') %>
        </div>
        <div class="col-sm-10">
            <h1><%= title %>: <%= category.name %></h1>

            <%if (category_fruits.length) { %>
            <p><strong>Delete the following books before attempting to delete this category.</strong></p>
                <div style="margin-left:20px; margin-top:20px;">
                  <h4>Fruits:</h4>
                  <dl>
                    <% category_fruits.forEach(function(fruit) { %>
                      <dt><a href="<%= fruit.url %>"><%= fruit.name %></a></dt>
                    <% }); %>
                  </dl>
                </div>
            <% } else {%>
            <p>Do you really want to delete this Category?</p>
              <form method="POST">
                <div class="form-group">
                  <input id="genreid" class="form-control" type="hidden" name="categoryid" value="<%= category._id %>">
                </div>
                <button class="btn btn-primary" type="submit">Delete</button>
              </form>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>