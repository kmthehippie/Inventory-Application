
<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body>
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('partials/sidebar') %>
        </div>

        <div class="col-sm-10">
            <h1><%= title %></h1>
            <h2><%= fruit.name %></h2>
            Fruit Instance ID: <a href="<%=fruit_instance.url%>"><%= fruit_instance._id %></a>
            <br/><br/>     
            <form method="POST" enctype="multipart/form-data">            
            <div class="form-group">
            <label for="date">Date of Spoilage:</label>
            <input id="date" class="form-control" type="date" name="date" value="<%= typeof spoilage !== "undefined" && spoilage.date ? spoilage.date.toISOString().split('T')[0] : '' %>">
            </div>

            <div class="form-group">
            <label for="amount">Amount: (In <%=fruit_instance.quantitytype%>) </label>
            <input class="form-control" type="number" name="amount" inputmode="numeric" pattern="[0-9]*" placeholder="Enter Quantity Spoilt" value="<%= typeof spoilage !== 'undefined' ? spoilage.amount : '' %>">
            </div>
            <br/>
            <div class="form-group">
              <label for="images">Upload Images:</label>
              <input type="file" id="images" name="images" accept="image/*" multiple> <!-- Add file input for images -->
            </div>
            
            <input type="hidden" name="fruitInstanceId" value="<%= fruit_instance._id %>">
            <input type="hidden" name="spoilage" value="<%= typeof spoilage !== "undefined" && spoilage.imgurls ? spoilage.imgurls : '' %>">
            <button class="btn btn-primary" type="submit">Submit</button>

            </form>
              
            <% if (errors.length > 0) { %>
              <ul>
                <% errors.forEach(error => { %>
                  <li><%= error.msg %></li>
                <% }); %>
              </ul>
              <% } %>   
        </div>
    </div>
</div>
</body>
</html>
