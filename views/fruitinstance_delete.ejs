<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body>
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('partials/sidebar') %>
        </div>
        <div class="col-sm-10">
            <h1><%= title %>: </h1>
            <h4><%= fruit.name %></h4>
            <%if (sales.length > 0 || spoilages.length > 0) { %>
                <p><strong>Delete the following sales and spoilages before attempting to delete this fruit instance.</strong></p>
                    <div style="margin-left:20px; margin-top:20px;">
                    <% if(spoilages.length > 0) {%>
                      <h4>Spoilage:</h4>
                      <dl>
                        <% spoilages.forEach(function(spoilt) { %>
                          <dt><a href="<%= spoilt.url %>"><%= spoilt._id %></a></dt>
                        <% }); %>
                      </dl>
                    <%}%>
                    <% if(sales.length > 0) {%>
                        <h4>Sale:</h4>
                        <dl>
                          <% sales.forEach(function(sold) { %>
                            <dt><a href="<%= sold.url %>"><%= sold._id %></a></dt>
                          <% }); %>
                        </dl>
                    <%}%>
                      
                    </div>
                <% } else {%>
                <p>Do you really want to delete this Category?</p>
                  <form method="POST">
                    <div class="form-group">
                      <input id="fruitinstanceid" class="form-control" type="hidden" name="fruitinstanceid" value="<%= fruit_instance._id %>">
                    </div>
                    <button class="btn btn-primary" type="submit">Delete</button>
                  </form>
                <% } %>

        </div>
    </div>
</div>
</body>
</html>