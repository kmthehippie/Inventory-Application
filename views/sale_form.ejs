
<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body>
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('partials/sidebar') %>
        </div>

        <div class="col-sm-10">
            <h1><%= title %></h1>
            <h2><%= fruit.name %></h2>
            Fruit Instance ID: <a href="<%=fruit_instance.url%>"><%= fruit_instance._id %></a>
            <br/><br/>     
            <form method="POST">            
            <div class="form-group">
            <label for="date">Date of Sale:</label>
            <input id="date" class="form-control" type="date" name="date" value="<%= typeof sale !== "undefined" && sale.date ? sale.date.toISOString().split('T')[0] : '' %>">
            </div>

            <div class="form-group">
            <label for="amount">Amount: (In <%=fruit_instance.quantitytype%>) </label>
            <input class="form-control" type="number" name="amount" inputmode="numeric" pattern="[0-9]*" placeholder="Enter Quantity Sold" value="<%= typeof sale !== 'undefined' ? sale.amount : '' %>">
            
            <br/>
            <label for="price">Selling Price: </label>
            <input class="form-control" type="number" name="price" inputmode="numeric" pattern="[0-9]*" step="any" placeholder="Enter Sold Price (Egs. 19.00)" value="<%= typeof sale !== 'undefined' ? sale.price : '' %>" >
            </div>
            
            <input type="hidden" name="fruitInstanceId" value="<%= fruit_instance._id %>">


            <button class="btn btn-primary" type="submit">Submit</button>


            </form>
              
            <% if (errors.length > 0) { %>
              <ul>
                <% errors.forEach(error => { %>
                  <li><%= error.msg %></li>
                <% }); %>
              </ul>
              <% } %>   
        </div>
    </div>
</div>
</body>
</html>
