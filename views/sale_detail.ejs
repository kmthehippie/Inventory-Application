<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body>
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('partials/sidebar') %>
        </div>
        <div class="col-sm-10">
            <h1>Sale ID:</h1>
            <p>  <%= title %> </p>
            <h3><%= fruit.name %></h3>
            <table>
                <tr>
                    <td class="p-3">Date Sold</td>
                    <td><%= sale.sale_date_formatted %></td>
                </tr>
                <tr>
                    <td class="p-3">Amount Sold</td>
                    <td><%= sale.amount %> <%= fruit_instance.quantitytype %></td>
                </tr>
                <tr>
                    <td class="p-3">Price Sold</td>
                    <td> $ <%= sale.price %></td>
                </tr>
            </table>
            <hr>
            <a href="<%= fruit_instance.url %>"><button class="btn btn-primary m-3">Back to Fruit Instance</button></a>
            <a href="<%= sale.url%>/delete"><button class="btn btn-primary m-3">Delete Sale</button></a>
            <a href="<%= sale.url%>/update"><button class="btn btn-primary m-3">Update Sale</button></a>
        </div>
    </div>
</div>
</body>
</html>