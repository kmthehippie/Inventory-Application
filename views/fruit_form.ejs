
<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body>
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('partials/sidebar') %>
        </div>
        <div class="col-sm-10">
            <h1><%= title %></h1>
          <form method="POST">
            <div class="form-group">
              <label for="name">Name:</label>
              <input id="name" class="form-control" type="text" placeholder="Fruit Name" name="name" required value="<%= typeof fruit !== 'undefined' ? fruit.name : '' %>">
              <label for="origin">Origin:</label>
              <input id="origin" class="form-control" type="text" placeholder="Fruit Origin" name="origin" required value="<%= typeof fruit !== 'undefined' ? fruit.origin : '' %>">
            </div>
            <div class="form-group">
              <label for="description">Description:</label>
              <input id="description" class="form-control" type="text" placeholder="Fruit Description" name="description" required value="<%= typeof fruit !== 'undefined' ? fruit.description : '' %>">
            </div>
            <div class="form-group">
              <label for="category">Category:</label>
              <select id="category" class="form-control" name="category" required>
                <option value="">--Please select a category--</option>
                <% categories.forEach(function(cat) { %>
                  
                  <% if (fruit && cat._id.toString() === fruit.category.toString()) { %>
                    <option value="<%= cat._id %>" selected><%= cat.name %></option>
                  <% } else { %>
                    <option value="<%= cat._id %>"><%= cat.name %></option>
                  <% } %>                     
                <% }); %>
              </select>
               
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>

          </form>
          
          <% if (errors && errors.length > 0) { %>
            <ul>
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }); %>
            </ul>
          <% } %>
          
    
        </div>
    </div>
</div>
</body>
</html>
