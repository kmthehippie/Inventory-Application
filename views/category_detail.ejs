<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body>
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('partials/sidebar') %>
        </div>
        <div class="col-sm-10">
            <h1>Category: <%= title %> </h1>
            <% if (fruit.length === 0) { %>
                <%= "No fruits in this category" %>
            <% } %>
            <% fruit.forEach(fruit=>{%>
            <a href="<%=fruit.url%>"><%= fruit.name %></a> from <%= fruit.origin %>
            <%})%>
            <br/>
            <a href="<%= cat.url%>/delete"><button class="btn btn-primary m-3">Delete Category</button></a>
            <a href="<%= cat.url%>/update"><button class="btn btn-primary m-3">Update Category</button></a>
        </div>
    </div>
</div>
</body>
</html>